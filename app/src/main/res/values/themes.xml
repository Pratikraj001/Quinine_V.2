<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quinine" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="textAppearanceLargePopupMenu">@style/PopupMenuTheme</item>
    </style>

    <!-- Popup menu theme -->
    <style name="PopupMenuTheme" parent="Theme.Quinine">
        <item name="android:fontFamily">@font/worksans_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextDarkPrimary</item>
    </style>
</resources>